{
    "extends": "airbnb-base",
    "plugins": [],
    "env": {
      "node": true,
      "mocha": true,
      "es6": true,
      "mongo": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    },
    "rules": {
      "no-restricted-syntax": "off",
      "camelcase": ["error", { "allow": ["team_id", "access_token"] }],
      "comma-dangle": 0,
      "no-underscore-dangle": ["error", { "allow": ["_id"] }],
      "no-plusplus": 0,
      "no-useless-escape": 1,
      "max-len": ["error", { "code": 160 }],
      "no-useless-constructor": 1,
      "class-methods-use-this": 0
    }
}
